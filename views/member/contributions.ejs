<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Make Contribution - Alumni System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }

        @keyframes success-tick {
            0% {
                scale: 0;
            }

            50% {
                scale: 1.2;
            }

            100% {
                scale: 1;
            }
        }

        .tick {
            animation: success-tick 0.5s ease-out forwards;
        }

        .modal-overlay {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(4px);
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.05);
            border-radius: 10px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(30, 58, 138, 0.2);
            border-radius: 10px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(30, 58, 138, 0.4);
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <!-- Success Modal -->
    <div id="successModal" class="fixed inset-0 z-[100] hidden flex items-center justify-center p-4 modal-overlay">
        <div class="glass bg-white rounded-[2.5rem] p-10 max-w-sm w-full text-center shadow-2xl transform transition-all scale-95 opacity-0"
            id="modalContent">
            <div
                class="w-24 h-24 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-6 text-5xl tick">
                ‚úì
            </div>
            <h3 class="text-2xl font-black text-gray-900 mb-2">Payment Submitted!</h3>
            <p class="text-gray-500 font-medium mb-8">Your proof has been received. Our admin will verify it within 24
                hours.</p>
            <button onclick="closeModal()"
                class="w-full bg-primary text-white py-4 rounded-2xl font-black hover:bg-blue-800 transition shadow-xl shadow-blue-500/20">
                AWESOME, THANKS!
            </button>
        </div>
    </div>

    <div class="flex flex-col min-h-screen">
        <header
            class="glass bg-white/70 sticky top-0 z-50 p-4 flex justify-between items-center border-b border-gray-200">
            <div class="flex items-center gap-4">
                <a href="/dashboard" class="text-primary hover:bg-blue-50 p-2 rounded-xl transition">‚Üê Back</a>
                <h1 class="text-xl font-extrabold text-primary">CONTRIBUTION PORTAL</h1>
            </div>
            <div class="hidden lg:block">
                <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Developer</p>
                <p class="text-xs font-semibold text-gray-600">Engr Usman Umar</p>
            </div>
        </header>

        <main class="flex-1 p-6 lg:p-12">
            <div class="max-w-4xl mx-auto">
                <!-- Step-by-Step Flow -->
                <div class="glass rounded-[2rem] shadow-2xl overflow-hidden mb-12">
                    <div class="bg-primary p-8 text-white">
                        <h2 class="text-2xl font-black italic">How to pay in 3 Easy Steps</h2>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                            <div class="bg-white/10 p-4 rounded-2xl">
                                <span
                                    class="bg-white text-primary w-8 h-8 rounded-full flex items-center justify-center font-black mb-3">1</span>
                                <p class="text-xs font-bold uppercase tracking-wider">Select Month</p>
                            </div>
                            <div class="bg-white/10 p-4 rounded-2xl">
                                <span
                                    class="bg-white text-primary w-8 h-8 rounded-full flex items-center justify-center font-black mb-3">2</span>
                                <p class="text-xs font-bold uppercase tracking-wider">Pay to Bank</p>
                            </div>
                            <div class="bg-white/10 p-4 rounded-2xl">
                                <span
                                    class="bg-white text-primary w-8 h-8 rounded-full flex items-center justify-center font-black mb-3">3</span>
                                <p class="text-xs font-bold uppercase tracking-wider">Upload Proof</p>
                            </div>
                        </div>
                    </div>

                    <div class="p-8 space-y-8">
                        <!-- Step 1 & 2 -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="font-black text-gray-800 uppercase tracking-widest text-sm">Step 1: Choose
                                    Months</h3>
                                <select id="yearSelect"
                                    class="bg-white border-2 border-gray-100 rounded-xl px-4 py-1.5 text-xs font-black text-primary focus:outline-none focus:ring-2 focus:ring-primary/20 transition">
                                    <% for(let y=2026; y <=2035; y++) { %>
                                        <option value="<%= y %>" <%=y===new Date().getFullYear() ? 'selected' : '' %>>
                                            <%= y %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                            <div class="bg-gray-50 border-2 border-gray-100 rounded-[2rem] p-4 max-h-48 overflow-y-auto space-y-2 custom-scrollbar"
                                id="monthsList">
                                <% const months=["January", "February" , "March" , "April" , "May" , "June" , "July"
                                    , "August" , "September" , "October" , "November" , "December" ]; for(let i=0; i <
                                    12; i++) { const monthVal=String(i + 1).padStart(2, '0' ); %>
                                    <label
                                        class="flex items-center gap-3 p-3 bg-white rounded-xl cursor-pointer hover:bg-blue-50 transition group month-item"
                                        data-month-name="<%= months[i] %>" data-month-idx="<%= monthVal %>">
                                        <input type="checkbox" name="months" value=""
                                            class="w-5 h-5 rounded-lg border-2 border-gray-200 text-primary focus:ring-primary cursor-pointer">
                                        <span
                                            class="font-bold text-gray-700 group-hover:text-primary transition month-label">
                                            <%= months[i] %> <span class="year-label">
                                                    <%= currentYear %>
                                                </span>
                                        </span>
                                    </label>
                                    <% } %>
                            </div>
                            <div class="flex justify-between items-center px-2 mt-2">
                                <p class="text-xs text-gray-400 font-medium">‚Ç¶<span id="amountPerMonth">1,000</span> per
                                    month</p>
                                <p class="text-xs font-black text-primary uppercase italic" id="totalDisplay">Total:
                                    ‚Ç¶0</p>
                            </div>
                        </div>

                        <div class="space-y-4">
                            <h3 class="font-black text-gray-800 uppercase tracking-widest text-sm">Step 2: Bank
                                Transfer</h3>
                            <div
                                class="bg-blue-50/50 border border-blue-100 p-6 rounded-[2rem] relative group overflow-hidden">
                                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition">
                                    üè¶</div>
                                <p class="text-[10px] text-blue-400 font-black uppercase mb-2">Account Details</p>
                                <p class="text-sm font-bold text-blue-800" id="bankName">Loading...</p>
                                <div class="flex items-center justify-between mt-1">
                                    <p class="text-lg font-black text-primary" id="accNumber">Loading...</p>
                                    <button onclick="copyAcc(this)"
                                        class="text-[10px] bg-primary text-white px-4 py-1.5 rounded-full font-black hover:scale-105 active:scale-95 transition min-w-[60px]">COPY</button>
                                </div>
                                <p class="text-xs text-blue-600 mt-2" id="accName">Loading...</p>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="space-y-4 pt-4 border-t border-gray-100">
                        <h3 class="font-black text-gray-800 uppercase tracking-widest text-sm">Step 3: Upload Proof
                        </h3>
                        <form id="paymentForm" class="space-y-6">
                            <div class="relative group">
                                <input type="file" id="proofUpload"
                                    class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-20"
                                    accept="image/*,.pdf">
                                <div class="border-4 border-dashed border-gray-100 rounded-[2rem] p-12 text-center group-hover:border-primary/30 transition bg-gray-50/50"
                                    id="dropZone">
                                    <div class="text-4xl mb-4 group-hover:scale-110 transition inline-block">üìÑ
                                    </div>
                                    <p class="text-gray-500 font-bold" id="fileName">Drop your receipt here or click
                                        to browse</p>
                                    <p class="text-[10px] text-gray-400 font-black uppercase mt-2 tracking-widest">
                                        JPG, PNG or PDF (Max 5MB)</p>
                                </div>
                            </div>
                            <button type="submit"
                                class="w-full bg-primary text-white py-5 rounded-[2rem] font-black hover:bg-blue-800 shadow-2xl shadow-blue-500/20 transform active:scale-95 transition text-lg tracking-tight">
                                üöÄ SUBMIT FOR VERIFICATION
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contribution Status Grid -->
            <div class="glass rounded-[2rem] shadow-xl overflow-hidden mb-8">
                <div class="px-8 py-6 border-b border-gray-100 flex justify-between items-center">
                    <h3 class="font-black text-gray-900 tracking-tight flex items-center gap-2">
                        <span class="text-xl">üìÖ</span>
                        <span id="displayYear">
                            <%= currentYear %>
                        </span> PAYMENT STATUS
                    </h3>
                    <div class="flex gap-4 text-[10px] font-black uppercase tracking-widest flex-wrap">
                        <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-green-500"></span>
                            Paid</span>
                        <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-orange-400"></span>
                            Pending</span>
                        <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-red-500"></span>
                            Due</span>
                        <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-gray-300"></span>
                            Unpaid</span>
                    </div>
                </div>
                <div class="p-8">
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4" id="statusGrid">
                        <!-- Status cards will be injected here -->
                        <% for(let i=0; i < 12; i++) { %>
                            <div class="bg-gray-50 border border-gray-100 rounded-2xl p-4 text-center animate-pulse">
                                <div class="h-4 bg-gray-200 rounded w-1/2 mx-auto mb-2"></div>
                                <div class="h-2 bg-gray-200 rounded w-3/4 mx-auto"></div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

            <!-- History -->
            <div class="glass rounded-[2rem] shadow-xl overflow-hidden">
                <div class="px-8 py-6 border-b border-gray-100 flex justify-between items-center">
                    <h3 class="font-black text-gray-900 tracking-tight">PAYMENT HISTORY</h3>
                    <span class="text-xs text-gray-400 font-bold uppercase">Status Check</span>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead class="bg-gray-50/50 text-[10px] uppercase tracking-widest font-black text-gray-400">
                            <tr>
                                <th class="px-8 py-4">Month</th>
                                <th class="px-8 py-4">Amount</th>
                                <th class="px-8 py-4">Status</th>
                                <th class="px-8 py-4">Verification</th>
                            </tr>
                        </thead>
                        <tbody id="historyTable" class="divide-y divide-gray-50">
                            <tr>
                                <td colspan="4" class="px-8 py-12 text-center text-gray-400 font-bold italic">
                                    Loading history...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
    </main>
    </div>

    <script>
        function showSuccess() {
            const modal = document.getElementById('successModal');
            const content = document.getElementById('modalContent');
            modal.classList.remove('hidden');
            setTimeout(() => {
                content.classList.remove('scale-95', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeModal() {
            const modal = document.getElementById('successModal');
            const content = document.getElementById('modalContent');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        const yearSelect = document.getElementById('yearSelect');
        const displayYear = document.getElementById('displayYear');
        const monthItems = document.querySelectorAll('.month-item');
        let contributionAmount = 1000; // Default fallback

        async function fetchSettings() {
            try {
                const res = await fetch('/api/v1/contributions/settings');
                const result = await res.json();
                if (result.success) {
                    const s = result.data;
                    contributionAmount = s.contribution_amount || 1000;
                    document.getElementById('amountPerMonth').textContent = contributionAmount.toLocaleString();
                    document.getElementById('bankName').textContent = s.bank_name;
                    document.getElementById('accNumber').textContent = s.account_number;
                    document.getElementById('accName').textContent = s.account_name;
                }
            } catch (e) { console.error(e); }
        }

        function updateYearUI(year) {
            displayYear.textContent = year;
            monthItems.forEach(item => {
                const monthIdx = item.dataset.monthIdx;
                const input = item.querySelector('input');
                const yearSpan = item.querySelector('.year-label');

                input.value = `${year}-${monthIdx}`;
                yearSpan.textContent = year;

                // Reset states
                input.disabled = false;
                input.checked = false;
                item.classList.remove('opacity-50', 'cursor-not-allowed', 'bg-gray-100', 'bg-red-50', 'border', 'border-red-200');
                item.classList.add('bg-white', 'cursor-pointer', 'hover:bg-blue-50');

                const span = item.querySelector('.month-label');
                const badges = span.querySelectorAll('.status-badge');
                badges.forEach(b => b.remove());
            });
            totalDisplay.textContent = "Total: ‚Ç¶0";
            fetchStatusSummary(year);
        }

        yearSelect.addEventListener('change', (e) => {
            updateYearUI(e.target.value);
        });

        function copyAcc(btn) {
            const acc = document.getElementById('accNumber').innerText;
            navigator.clipboard.writeText(acc);

            const originalText = btn.innerText;
            btn.innerText = "COPIED! ‚úÖ";
            btn.classList.replace('bg-primary', 'bg-green-600');

            setTimeout(() => {
                btn.innerText = originalText;
                btn.classList.replace('bg-green-600', 'bg-primary');
            }, 2000);
        }

        // Multi-Month Logic
        const monthsList = document.getElementById('monthsList');
        // We use querySelectorAll here because it needs to re-fetch if we change things, but better to use a stable listener
        monthsList.addEventListener('change', (e) => {
            if (e.target.type === 'checkbox') {
                const selected = Array.from(monthsList.querySelectorAll('input[type="checkbox"]')).filter(c => c.checked).length;
                totalDisplay.textContent = `Total: ‚Ç¶${(selected * contributionAmount).toLocaleString()}`;
            }
        });

        // File Selection Feedback
        document.getElementById('proofUpload').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                document.getElementById('fileName').innerHTML = `<span class="text-primary font-black">‚úÖ ${file.name}</span>`;
                document.getElementById('dropZone').classList.add('border-primary/50', 'bg-blue-50/10');
            }
        });

        async function fetchStatusSummary(year) {
            const currentSelectedYear = year || yearSelect.value;
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch(`/api/v1/contributions/status-summary?year=${currentSelectedYear}`, { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    const result = await res.json();
                    const data = result.data || [];
                    const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

                    // Update Status Grid - now includes 'Due' status
                    document.getElementById('statusGrid').innerHTML = data.map((s, i) => `
                        <div class="relative group">
                            <div class="rounded-2xl p-4 text-center border-2 transition-all duration-300 ${s.status === 'Paid' ? 'bg-green-50 border-green-200 text-green-700' :
                            s.status === 'Pending' ? 'bg-orange-50 border-orange-200 text-orange-700' :
                                s.status === 'Due' ? 'bg-red-50 border-red-200 text-red-700' :
                                    'bg-gray-50 border-gray-100 text-gray-400'
                        }">
                                <p class="text-[10px] font-black uppercase tracking-widest mb-1">${months[i]}</p>
                                <p class="text-sm font-black">${s.status}</p>
                                ${s.amount ? `<p class="text-[9px] mt-1">‚Ç¶${s.amount.toLocaleString()}</p>` : ''}
                            </div>
                            <div class="absolute -top-1 -right-1">
                                ${s.status === 'Paid' ? '<span class="flex h-5 w-5 items-center justify-center rounded-full bg-green-500 text-[10px] text-white shadow-lg">‚úì</span>' : ''}
                                ${s.status === 'Pending' ? '<span class="flex h-5 w-5 items-center justify-center rounded-full bg-orange-400 text-[10px] text-white shadow-lg animate-bounce">‚è≥</span>' : ''}
                                ${s.status === 'Due' ? '<span class="flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-[10px] text-white shadow-lg animate-pulse">!</span>' : ''}
                            </div>
                        </div>
                    `).join('');

                    // Update Checkboxes - Disable Paid/Pending, but allow Due months
                    const checkboxes = document.querySelectorAll('#monthsList input[type="checkbox"]');
                    checkboxes.forEach(cb => {
                        const statusData = data.find(d => d.month === cb.value);
                        const status = statusData?.status;

                        if (status === 'Paid' || status === 'Pending') {
                            // Disable paid/pending months
                            cb.disabled = true;
                            cb.checked = false;
                            cb.parentElement.classList.add('opacity-50', 'cursor-not-allowed', 'bg-gray-100');
                            cb.parentElement.classList.remove('hover:bg-blue-50', 'cursor-pointer', 'bg-white');

                            const span = cb.parentElement.querySelector('.month-label');
                            if (!span.innerHTML.includes(status)) {
                                span.innerHTML += ` <span class="status-badge text-[10px] ml-2 px-2 py-0.5 rounded-full uppercase tracking-widest text-white ${status === 'Paid' ? 'bg-green-500' : 'bg-orange-400'}">${status}</span>`;
                            }
                        } else if (status === 'Due') {
                            // Due months are selectable and highlighted
                            cb.parentElement.classList.add('bg-red-50', 'border', 'border-red-200');
                            cb.parentElement.classList.remove('bg-white');

                            const span = cb.parentElement.querySelector('.month-label');
                            if (!span.innerHTML.includes('DUE')) {
                                span.innerHTML += ` <span class="status-badge text-[10px] ml-2 px-2 py-0.5 rounded-full uppercase tracking-widest text-white bg-red-500 animate-pulse">DUE</span>`;
                            }
                        }
                    });
                }
            } catch (e) { console.error(e); }
        }

        async function fetchHistory() {
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch('/api/v1/contributions/my-history', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    const result = await res.json();
                    const data = result.data || [];
                    document.getElementById('historyTable').innerHTML = data.map(h => {
                        const displayMonths = h.months && h.months.length > 0 ? h.months.join(', ') : (h.month || 'N/A');
                        return `
                        <tr class="hover:bg-gray-50/50 transition">
                            <td class="px-8 py-6 font-black text-gray-900">${displayMonths}</td>
                            <td class="px-8 py-6 font-bold text-gray-600">‚Ç¶${h.amount.toLocaleString()}</td>
                            <td class="px-8 py-6">
                                <span class="px-4 py-1.5 rounded-xl text-[10px] font-black uppercase tracking-widest ${h.status === 'Verified' ? 'bg-green-100 text-green-700' :
                                h.status === 'Rejected' ? 'bg-red-100 text-red-700' : 'bg-orange-100 text-orange-700'
                            }">${h.status}</span>
                            </td>
                            <td class="px-8 py-6">
                                ${h.status === 'Verified' ? '<span class="text-2xl tick inline-block">‚úÖ</span>' : '<span class="text-gray-300">‚è≥ Waiting</span>'}
                            </td>
                        </tr>
                    `}).join('') || '<tr><td colspan="4" class="px-8 py-12 text-center text-gray-400">No payment history yet.</td></tr>';
                }
            } catch (e) { console.error(e); }
        }

        document.getElementById('paymentForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const token = localStorage.getItem('access_token');
            const file = document.getElementById('proofUpload').files[0];

            const allCheckboxes = document.querySelectorAll('#monthsList input[type="checkbox"]');
            const selectedMonths = Array.from(allCheckboxes).filter(c => c.checked).map(c => c.value);
            if (selectedMonths.length === 0) return alert("Please select at least one month üìÖ");
            if (!file) return alert("Please upload proof of payment üìÑ");

            const formData = new FormData();
            formData.append('months', selectedMonths.join(','));
            formData.append('amount', selectedMonths.length * contributionAmount);
            formData.append('proof', file);

            try {
                const btn = e.target.querySelector('button');
                btn.disabled = true;
                const originalBtnContent = btn.innerHTML;
                btn.innerHTML = `
                    <div class="flex items-center justify-center gap-3">
                        <svg class="animate-spin h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>PROCESSING...</span>
                    </div>
                `;

                const res = await fetch('/api/v1/contributions/submit-payment', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });
                if (res.ok) {
                    showSuccess();
                    e.target.reset();
                    fileName.innerHTML = "Drop your receipt here or click to browse";
                    document.getElementById('dropZone').classList.remove('border-primary/50', 'bg-blue-50/10');
                    fetchHistory();
                    fetchStatusSummary(yearSelect.value);
                } else {
                    const err = await res.json();
                    alert(err.message || err.detail || "Submission failed.");
                }
            } catch (e) { console.error(e); } finally {
                const btn = e.target.querySelector('button');
                btn.disabled = false;
                btn.innerHTML = "üöÄ SUBMIT FOR VERIFICATION";
            }
        });

        const currentYear = new Date().getFullYear();
        updateYearUI(currentYear < 2026 ? 2026 : currentYear);
        fetchSettings();
        fetchHistory();
    </script>
</body>

</html>