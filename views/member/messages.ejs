<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages - Alumni System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }

        .chat-bubble-member {
            background: #1e3a8a;
            color: white;
            border-radius: 1.5rem 1.5rem 0 1.5rem;
        }

        .chat-bubble-admin {
            background: #f3f4f6;
            color: #111827;
            border-radius: 1.5rem 1.5rem 1.5rem 0;
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <div class="flex flex-col h-screen">
        <header class="glass bg-white/70 p-4 flex justify-between items-center border-b border-gray-200 px-8">
            <h1 class="text-xl font-extrabold text-primary tracking-tight uppercase">Support Messages</h1>
            <div class="flex items-center gap-4">
                <a href="/dashboard" class="text-sm text-gray-600 hover:text-primary font-bold transition">‚Üê
                    Dashboard</a>
                <button onclick="handleLogout()"
                    class="text-sm bg-red-50 text-red-600 px-4 py-2 rounded-xl font-bold">Logout</button>
            </div>
        </header>

        <main class="flex-1 overflow-hidden flex flex-col max-w-4xl mx-auto w-full p-4 lg:p-8">
            <div class="flex-1 glass rounded-[2.5rem] shadow-xl flex flex-col overflow-hidden bg-white/80">
                <!-- Chat View -->
                <div id="chatWindow" class="flex-1 overflow-y-auto p-6 space-y-4">
                    <div class="text-center py-12 text-gray-400">
                        <p class="font-bold">Loading conversation...</p>
                    </div>
                </div>

                <!-- Input Area -->
                <div class="p-4 border-t border-gray-100 bg-white/50 backdrop-blur-md">
                    <form id="messageForm" class="flex gap-2">
                        <input type="text" id="contentInput" required placeholder="Type your issue or complain here..."
                            class="flex-1 bg-white border border-gray-200 rounded-2xl px-6 py-4 focus:outline-none focus:ring-2 focus:ring-primary/20 transition font-medium">
                        <button type="submit" id="sendBtn"
                            class="bg-primary text-white px-8 py-4 rounded-2xl font-black shadow-lg shadow-blue-500/20 hover:bg-blue-800 transition transform active:scale-95">
                            SEND
                        </button>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script>
        async function handleLogout() { localStorage.removeItem('access_token'); window.location.href = '/login'; }

        async function loadMessages() {
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch('/api/v1/messages/my', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                if (res.ok) {
                    const messages = await res.json();
                    const win = document.getElementById('chatWindow');

                    if (messages.length === 0) {
                        win.innerHTML = `
                            <div class="text-center py-12 space-y-4">
                                <div class="text-4xl">üí¨</div>
                                <h3 class="text-xl font-black text-gray-900">Start a Conversation</h3>
                                <p class="text-gray-500 max-w-xs mx-auto font-medium">Have a complain or issue? Send a message to the admin team below.</p>
                            </div>
                        `;
                        return;
                    }

                    win.innerHTML = messages.map(m => `
                        <div class="flex ${m.sender_role === 'Member' ? 'justify-end' : 'justify-start'}">
                            <div class="max-w-[80%] px-6 py-4 shadow-sm ${m.sender_role === 'Member' ? 'chat-bubble-member' : 'chat-bubble-admin'}">
                                <p class="text-sm font-medium">${m.content}</p>
                                <p class="text-[9px] mt-1 opacity-60 font-black uppercase text-right">
                                    ${new Date(m.created_at).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                                </p>
                            </div>
                        </div>
                    `).join('');
                    win.scrollTop = win.scrollHeight;
                }
            } catch (e) { console.error(e); }
        }

        document.getElementById('messageForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const input = document.getElementById('contentInput');
            const btn = document.getElementById('sendBtn');
            const content = input.value.trim();
            if (!content) return;

            btn.disabled = true;
            const token = localStorage.getItem('access_token');

            try {
                const res = await fetch('/api/v1/messages/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ content })
                });

                if (res.ok) {
                    input.value = '';
                    loadMessages();
                } else {
                    alert("Failed to send message.");
                }
            } catch (e) { console.error(e); }
            finally { btn.disabled = false; }
        });

        loadMessages();
        // Poll for new messages every 5 seconds
        setInterval(loadMessages, 5000);
    </script>
</body>

</html>