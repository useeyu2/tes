<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Directory - Alumni System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.05);
            border-radius: 10px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: rgba(30, 58, 138, 0.2);
            border-radius: 10px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(30, 58, 138, 0.4);
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <div class="flex flex-col min-h-screen">
        <header
            class="glass bg-white/70 sticky top-0 z-50 p-4 px-8 flex justify-between items-center border-b border-gray-200">
            <div class="flex items-center gap-4">
                <a href="/dashboard" class="text-primary hover:bg-blue-50 p-2 rounded-xl transition">‚Üê Back</a>
                <h1 class="text-xl font-extrabold text-primary tracking-tight uppercase">Member Directory</h1>
            </div>
            <div class="hidden lg:block">
                <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Network</p>
                <p class="text-xs font-semibold text-gray-600">Alumni Association</p>
            </div>
        </header>

        <main class="flex-1 p-6 lg:p-12">
            <div class="max-w-6xl mx-auto space-y-8">
                <!-- Search and Filter -->
                <div class="glass rounded-[2rem] p-6 shadow-xl flex flex-col md:flex-row gap-4 items-center">
                    <div class="relative flex-1 w-full">
                        <span class="absolute left-6 top-1/2 -translate-y-1/2 text-gray-400 text-xl">üîç</span>
                        <input type="text" id="searchInput" placeholder="Search members by name, email or phone..."
                            class="w-full pl-16 pr-8 py-5 bg-white border-2 border-gray-100 rounded-[2rem] font-bold text-gray-700 outline-none focus:border-primary transition shadow-inner">
                    </div>
                </div>

                <!-- Members Grid -->
                <div id="membersGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Cards will be injected here -->
                    <% for(let i=0; i < 6; i++) { %>
                        <div class="glass rounded-[2.5rem] p-8 animate-pulse">
                            <div class="w-24 h-24 bg-gray-200 rounded-[2rem] mx-auto mb-6"></div>
                            <div class="h-4 bg-gray-200 rounded w-3/4 mx-auto mb-4"></div>
                            <div class="h-3 bg-gray-200 rounded w-1/2 mx-auto"></div>
                        </div>
                        <% } %>
                </div>
            </div>
        </main>
    </div>

    <script>
        let allMembers = [];

        async function fetchMembers() {
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch('/api/v1/auth/members', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                if (res.ok) {
                    allMembers = await res.json();
                    renderMembers(allMembers);
                }
            } catch (e) {
                console.error(e);
            }
        }

        function renderMembers(members) {
            const grid = document.getElementById('membersGrid');
            if (members.length === 0) {
                grid.innerHTML = '<div class="col-span-full py-20 text-center"><p class="text-gray-400 font-black text-xl italic">No members found matching your search. üîç</p></div>';
                return;
            }
            grid.innerHTML = members.map(m => `
                <div class="glass rounded-[2.5rem] p-8 shadow-xl hover:-translate-y-2 transition-all duration-300 group hover:shadow-2xl bg-white/40">
                    <div class="relative w-24 h-24 mx-auto mb-6">
                        <img src="${m.profile_picture || '/img/default-avatar.png'}" 
                             class="w-full h-full rounded-[2rem] object-cover border-4 border-white shadow-lg group-hover:scale-110 transition duration-500" 
                             alt="${m.full_name}">
                        <div class="absolute -bottom-2 -right-2 bg-green-500 w-6 h-6 rounded-full border-4 border-white shadow-sm"></div>
                    </div>
                    
                    <div class="text-center space-y-2">
                        <h3 class="text-xl font-black text-gray-900 line-clamp-1">${m.full_name}</h3>
                        <p class="text-xs font-bold text-primary uppercase tracking-[0.2em]">@${m.username || 'alumni'}</p>
                        
                        <div class="pt-4 space-y-3">
                            <div class="flex items-center gap-3 p-3 bg-white/50 rounded-2xl border border-gray-100/50 group-hover:bg-white transition">
                                <span class="text-xl">üìß</span>
                                <p class="text-xs font-bold text-gray-600 truncate">${m.email}</p>
                            </div>
                            <div class="flex items-center gap-3 p-3 bg-white/50 rounded-2xl border border-gray-100/50 group-hover:bg-white transition">
                                <span class="text-xl">üìû</span>
                                <p class="text-xs font-bold text-gray-600">${m.phone}</p>
                            </div>
                        </div>

                        <div class="pt-6 flex justify-between items-center decoration-gray-200 italic">
                             <div class="text-left">
                                <p class="text-[9px] text-gray-400 font-black uppercase">Joined</p>
                                <p class="text-[11px] font-bold text-gray-600">${new Date(m.created_at).toLocaleDateString([], { month: 'short', year: 'numeric' })}</p>
                             </div>
                             <div class="text-right">
                                <p class="text-[9px] text-gray-400 font-black uppercase">Score</p>
                                <p class="text-[11px] font-bold text-primary">${m.contribution_score || 0} pts</p>
                             </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        document.getElementById('searchInput').addEventListener('input', (e) => {
            const q = e.target.value.toLowerCase();
            const filtered = allMembers.filter(m =>
                m.full_name.toLowerCase().includes(q) ||
                m.email.toLowerCase().includes(q) ||
                m.phone.toLowerCase().includes(q) ||
                (m.username && m.username.toLowerCase().includes(q))
            );
            renderMembers(filtered);
        });

        fetchMembers();
    </script>
</body>

</html>