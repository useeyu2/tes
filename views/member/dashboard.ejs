    <script>
        async function handleLogout() { localStorage.removeItem('access_token'); window.location.href = '/login'; }

        async function fetchStats() {
            const token = localStorage.getItem('access_token');
            if (!token) return window.location.href = '/login';
            try {
                const meRes = await fetch('/api/v1/auth/me', { headers: { 'Authorization': `Bearer ${token}` } });
                if (meRes.ok) {
                    const user = await meRes.json();
                    document.getElementById('userNameHeader').textContent = `Welcome, ${user.full_name.split(' ')[0]}!`;
                    document.getElementById('userEmailSub').textContent = user.email;
                    document.getElementById('userScore').innerHTML = `${user.contribution_score || 0} <span class="text-sm font-medium text-gray-400">pts</span>`;
                    if (user.profile_picture) document.getElementById('profileImage').src = user.profile_picture;
                }
                const cRes = await fetch('/api/v1/contributions/my-stats', { headers: { 'Authorization': `Bearer ${token}` } });
                if (cRes.ok) {
                    const res = await cRes.json();
                    const stats = res.data || {};
                    document.getElementById('totalContributed').textContent = `‚Ç¶${(stats.totalPaid || 0).toLocaleString()}`;
                }

                const sRes = await fetch('/api/v1/contributions/status-summary', { headers: { 'Authorization': `Bearer ${token}` } });
                if (sRes.ok) {
                    const result = await sRes.json();
                    const summary = result.data || [];

                    // Check for unpaid and due contributions (up to current month for dashboard alerts)
                    const now = new Date();
                    const currentYear = now.getFullYear();
                    const currentMonthIdx = now.getMonth();

                    const dueContributions = summary.filter(s => {
                        const [y, m] = s.month.split('-').map(Number);
                        const monthIdx = m - 1;

                        // It's due if it's explicitly marked 'Due'
                        if (s.status === 'Due') return true;

                        // It's also due if it's 'Unpaid' and in the past or current month
                        const isPastOrCurrent = (y < currentYear) || (y === currentYear && monthIdx <= currentMonthIdx);
                        return s.status === 'Unpaid' && isPastOrCurrent;
                    });

                    const unpaidCount = summary.filter(s => s.status === 'Unpaid').length;

                    if (unpaidCount > 0) {
                        document.getElementById('unpaidAlert').classList.remove('hidden');
                    }

                    // Display notifications for due contributions
                    if (dueContributions.length > 0) {
                        const totalDue = dueContributions.length * 1000; // Fixed: ‚Ç¶1,000 per month
                        const notificationsSection = document.getElementById('notificationsSection');
                        const duesNotification = document.getElementById('duesNotification');
                        const remindersNotification = document.getElementById('remindersNotification');

                        // Show notifications section
                        notificationsSection.classList.remove('hidden');
                        duesNotification.classList.remove('hidden');

                        // Update dues information
                        document.getElementById('duesCount').textContent = dueContributions.length;
                        document.getElementById('duesAmount').textContent = `‚Ç¶${totalDue.toLocaleString()}`;

                        // Get the earliest due date
                        const currentMonth = dueContributions[0].month;
                        const [year, month] = currentMonth.split('-');
                        const dueDate = new Date(parseInt(year), parseInt(month), 5); // 5th of next month
                        const dueDateFormatted = dueDate.toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        });
                        document.getElementById('dueDateText').textContent = dueDateFormatted;

                        // Show reminder if due date is approaching (within 7 days)
                        const today = new Date();
                        const daysUntilDue = Math.ceil((dueDate - today) / (1000 * 60 * 60 * 24));
                        if (daysUntilDue <= 7 && daysUntilDue > 0) {
                            remindersNotification.classList.remove('hidden');
                            document.getElementById('reminderMessage').textContent =
                                `Payment due in ${daysUntilDue} day${daysUntilDue !== 1 ? 's' : ''}! Pay now to avoid late fees.`;
                        } else if (daysUntilDue <= 0) {
                            remindersNotification.classList.remove('hidden');
                            document.getElementById('reminderMessage').textContent =
                                `Your payment is overdue! Please pay immediately to maintain your active status.`;
                        }
                    }
                }

            } catch (e) { console.error('Stats Error (Contributions):', e); }

            try {
                const aRes = await fetch('/api/v1/reports/summary/annual', { headers: { 'Authorization': `Bearer ${token}` } });
                if (aRes.ok) {
                    const annual = await aRes.json();
                    document.getElementById('annualRaised').textContent = `‚Ç¶${(annual.data?.total || 0).toLocaleString()}`;
                    document.getElementById('annualExpenses').textContent = `‚Ç¶${(annual.data?.expenses || 0).toLocaleString()}`;
                    document.getElementById('annualBalance').textContent = `‚Ç¶${(annual.data?.balance || 0).toLocaleString()}`;
                }
            } catch (e) { console.error('Stats Error (Annual):', e); }
        }

        async function fetchRecentActivity() {
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch('/api/v1/activity/recent', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    const data = await res.json();
                    const feed = document.getElementById('activityFeed');
                    if (data.length === 0) {
                        feed.innerHTML = '<p class="text-center text-gray-400 font-bold py-8">No recent activity found.</p>';
                        return;
                    }
                    feed.innerHTML = data.map(act => `
                        <div class="flex items-start gap-4 p-4 hover:bg-white rounded-2xl transition group border border-transparent hover:border-blue-50">
                            <div class="w-12 h-12 rounded-xl flex items-center justify-center text-xl shadow-sm ${act.type === 'payment' ? 'bg-green-50 text-green-600' : 'bg-blue-50 text-blue-600'
                        }">
                                ${act.type === 'payment' ? 'üí≥' : '‚ú®'}
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-start">
                                    <h4 class="font-bold text-gray-900">${act.title}</h4>
                                    <span class="text-[10px] text-gray-400 font-black uppercase text-right">
                                        ${new Date(act.date).toLocaleDateString(undefined, { day: 'numeric', month: 'short' })}<br>
                                        ${new Date(act.date).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                                    </span>
                                </div>
                                <p class="text-sm text-gray-500 font-medium">${act.subtitle}</p>
                                <span class="inline-block mt-2 px-3 py-0.5 rounded-full text-[9px] font-black uppercase tracking-widest ${act.status === 'Verified' || act.status === 'Approved' ? 'bg-green-100 text-green-700' :
                            act.status === 'Rejected' ? 'bg-red-100 text-red-700' : 'bg-orange-100 text-orange-700'
                        }">
                                    ${act.status}
                                </span>
                            </div>
                        </div>
                    `).join('');
                }
            } catch (e) { console.error(e); }
        }

        document.getElementById('profileUpload').addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const formData = new FormData();
            formData.append('profile_picture', file);
            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch('/api/v1/auth/profile-picture', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });
                if (res.ok) {
                    const data = await res.json();
                    document.getElementById('profileImage').src = data.path;
                }
            } catch (e) { console.error(e); }
        });

        fetchStats();
        fetchRecentActivity();
    </script>
