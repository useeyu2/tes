<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Memories - Alumni System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .masonry-grid {
            column-count: 1;
            column-gap: 1.5rem;
        }

        @media (min-width: 640px) {
            .masonry-grid {
                column-count: 2;
            }
        }

        @media (min-width: 1024px) {
            .masonry-grid {
                column-count: 3;
            }
        }

        .masonry-item {
            break-inside: avoid;
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100 font-sans min-h-screen">
    <div class="flex flex-col min-h-screen">

        <!-- Header -->
        <header
            class="bg-black/50 backdrop-blur-xl border-b border-white/10 sticky top-0 z-20 px-6 py-4 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <a href="/dashboard"
                    class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center hover:bg-white/20 transition text-white">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h1 class="text-xl font-bold tracking-tight text-white">SKOSA Memories</h1>
                    <p class="text-[10px] text-gray-400 font-medium uppercase tracking-wider">Gallery</p>
                </div>
            </div>
        </header>

        <main class="flex-1 p-6 lg:p-12 overflow-y-auto">
            <div class="max-w-7xl mx-auto">
                <div id="galleryGrid" class="masonry-grid">
                    <!-- Loading State -->
                    <div class="col-span-full py-20 text-center text-gray-500 animate-pulse">
                        Loading memories...
                    </div>
                </div>

                <!-- Empty State -->
                <div id="emptyState" class="hidden flex flex-col items-center justify-center py-32 text-center">
                    <div class="w-24 h-24 bg-white/5 rounded-full flex items-center justify-center mb-6 text-4xl">ðŸ“¸
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-2">No Memories Yet</h3>
                    <p class="text-gray-400">Be the first to create memories at the next event!</p>
                </div>
            </div>
        </main>
    </div>

    <!-- Lightbox -->
    <div id="lightbox"
        class="fixed inset-0 bg-black/95 backdrop-blur-xl z-50 hidden flex-col items-center justify-center p-4">
        <button onclick="closeLightbox()"
            class="absolute top-6 right-6 text-white/50 hover:text-white transition text-3xl">
            <i class="fas fa-times"></i>
        </button>
        <img id="lightboxImg" src="" class="max-w-full max-h-[85vh] rounded shadow-2xl object-contain mb-4">
        <p id="lightboxCaption" class="text-white font-medium text-lg text-center max-w-2xl"></p>
    </div>

    <script>
        const token = localStorage.getItem('access_token');
        if (!token) window.location.href = '/login';

        async function loadPhotos() {
            try {
                const res = await fetch('/api/v1/gallery', { headers: { 'Authorization': `Bearer ${token}` } });
                const result = await res.json();
                const photos = result.data || [];
                const grid = document.getElementById('galleryGrid');

                if (photos.length === 0) {
                    grid.innerHTML = '';
                    document.getElementById('emptyState').classList.remove('hidden');
                    return;
                }

                grid.innerHTML = photos.map(photo => `
                    <div class="masonry-item group relative overflow-hidden rounded-2xl cursor-zoom-in" onclick="openLightbox('${photo.url}', '${photo.caption}')">
                        <img src="${photo.url}" alt="${photo.caption}" class="w-full h-auto transform transition duration-500 group-hover:scale-110 group-hover:brightness-75">
                        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent p-6 pt-12 opacity-0 group-hover:opacity-100 transition-all duration-300">
                            <p class="text-white font-bold text-sm leading-tight">${photo.caption || ''}</p>
                            <p class="text-[10px] text-gray-300 uppercase tracking-wider mt-1">${new Date(photo.uploaded_at).toLocaleDateString()}</p>
                        </div>
                    </div>
                `).join('');

            } catch (e) {
                console.error(e);
            }
        }

        function openLightbox(url, caption) {
            document.getElementById('lightboxImg').src = url;
            document.getElementById('lightboxCaption').textContent = caption === 'undefined' ? '' : caption;
            document.getElementById('lightbox').classList.remove('hidden');
            document.getElementById('lightbox').classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            document.getElementById('lightbox').classList.add('hidden');
            document.getElementById('lightbox').classList.remove('flex');
            document.body.style.overflow = '';
        }

        loadPhotos();
    </script>
</body>

</html>