<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Contribution System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e3a8a',
                        secondary: '#1e40af',
                    }
                }
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">
    <div class="flex-grow">
        <%- body %>
    </div>

    <footer class="bg-white/50 backdrop-blur-sm border-t border-gray-100 py-4 text-center">
        <p class="text-sm text-gray-500 font-medium">
            Designed and developed by <span class="text-primary font-bold">Engr Usman Umar</span>
        </p>
    </footer>

    <script>
        // Global Auth Check
        async function checkAuth() {
            const token = localStorage.getItem('access_token');
            if (!token && window.location.pathname !== '/login' && window.location.pathname !== '/register') {
                window.location.href = '/login';
            }
        }

        async function handleLogout() {
            localStorage.removeItem('access_token');
            window.location.href = '/login';
        }

        checkAuth();
    </script>
</body>

</html>