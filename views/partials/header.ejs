<header
    class="glass bg-white/70 sticky top-0 z-50 p-4 px-4 md:px-8 flex justify-between items-center border-b border-gray-200">
    <div class="flex items-center gap-3 md:gap-4">
        <!-- Mobile Hamburger -->
        <button onclick="toggleSidebar()" class="md:hidden p-2 hover:bg-gray-100 rounded-lg">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16">
                </path>
            </svg>
        </button>

        <h2 class="text-lg md:text-xl font-black text-gray-800 uppercase tracking-tight" id="headerTitle">
            <%= typeof title !=='undefined' ? title : 'Admin Panel' %>
        </h2>

        <div class="hidden lg:block border-l pl-4 border-gray-200">
            <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">ALUMNI SYSTEM</p>
            <p class="text-xs font-semibold text-gray-600">Standardized Admin View</p>
        </div>
    </div>

    <div class="flex items-center space-x-2 md:space-x-4">
        <div id="headerActions" class="flex items-center space-x-2 md:space-x-4">
            <!-- Specific page actions will be injected or defined here -->
            <% if (typeof actions !=='undefined' ) { %>
                <%- actions %>
                    <% } %>
        </div>

        <button onclick="handleLogout()"
            class="bg-red-500 hover:bg-red-600 text-white p-2 md:px-4 md:py-2 rounded-lg text-sm font-bold transition shadow-lg shadow-red-500/20">
            <span class="hidden md:inline">Logout</span>
            <span class="md:hidden">ðŸšª</span>
        </button>
    </div>
</header>