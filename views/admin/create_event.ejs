<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
</head>

<body class="bg-gray-50 text-gray-900 font-sans">

    <div class="max-w-4xl mx-auto p-4 md:p-8">
        <div class="mb-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
            <div>
                <a href="/admin/dashboard"
                    class="text-sm font-bold text-slate-500 hover:text-blue-600 transition mb-2 inline-block"><i
                        class="fas fa-arrow-left mr-1"></i> Back to Dashboard</a>
                <h1 class="text-3xl font-black text-slate-800">Create New Event</h1>
                <p class="text-slate-500 font-medium">Schedule a new gathering for the alumni.</p>
            </div>
        </div>

        <form onsubmit="createEvent(event)"
            class="bg-white rounded-3xl shadow-xl p-8 border border-slate-100 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-2">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Event
                        Title</label>
                    <input type="text" id="title"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-bold text-lg"
                        placeholder="e.g. Annual General Meeting 2026" required>
                </div>

                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Date</label>
                    <input type="date" id="date"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                        required>
                </div>

                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Time</label>
                    <input type="time" id="time"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                        required>
                </div>

                <div class="col-span-2">
                    <label
                        class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Location/Venue</label>
                    <input type="text" id="location"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                        placeholder="e.g. School Hall, Kankara" required>
                </div>

                <div class="col-span-2">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Organizer</label>
                    <input type="text" id="organizer"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                        placeholder="e.g. Secretariat" value="Secretariat" required>
                </div>

                <div class="col-span-2">
                    <label
                        class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Description</label>
                    <textarea id="description" rows="4"
                        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                        placeholder="Enter event details..."></textarea>
                </div>
            </div>

            <div class="pt-6 border-t border-slate-100 flex justify-end">
                <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-bold shadow-lg shadow-blue-600/20 transition transform hover:-translate-y-0.5 active:translate-y-0 text-sm">
                    <i class="fas fa-plus mr-2"></i> Publish Event
                </button>
            </div>
        </form>
    </div>

    <script>
        async function createEvent(e) {
            e.preventDefault();
            const token = localStorage.getItem('access_token');
            if (!token) return window.location.href = '/login';

            const data = {
                title: document.getElementById('title').value,
                date: document.getElementById('date').value,
                time: document.getElementById('time').value,
                location: document.getElementById('location').value,
                organizer: document.getElementById('organizer').value,
                description: document.getElementById('description').value
            };

            const btn = e.target.querySelector('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Publishing...';
            btn.disabled = true;

            try {
                const res = await fetch('/api/v1/events', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await res.json();

                if (res.ok) {
                    alert('Event successfully created!');
                    window.location.href = '/events'; // Redirect to list to see it
                } else {
                    alert(result.detail || 'Failed to create event');
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch (err) {
                console.error(err);
                alert('An error occurred');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }
    </script>
</body>

</html>