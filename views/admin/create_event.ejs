            </nav>
            <div class="p-4">
                <button onclick="handleLogout()"
                    class="w-full flex items-center justify-center gap-3 py-3 rounded-2xl bg-red-500/10 text-red-400 hover:bg-red-500/20 font-bold transition">
                    <span>üö™</span> Logout
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <header
                class="glass bg-white/70 sticky top-0 z-50 p-4 px-4 md:px-8 flex justify-between items-center border-b border-gray-200">
                <div class="flex items-center gap-3 md:gap-4">
                    <!-- Mobile Hamburger -->
                    <button onclick="toggleSidebar()" class="md:hidden p-2 hover:bg-gray-100 rounded-lg">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>

                    <h2 class="text-lg md:text-xl font-black text-gray-800 uppercase tracking-tight">Create Events</h2>
                </div>

                <div class="flex items-center gap-4">
                    <div class="hidden lg:block border-l pl-4 border-gray-200 mr-4">
                        <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">ALUMNI SYSTEM</p>
                        <p class="text-[10px] font-semibold text-gray-600">Standardized Admin View</p>
                    </div>
                    <button onclick="handleLogout()"
                        class="bg-red-500 hover:bg-red-600 text-white p-2 md:px-4 md:py-2 rounded-lg text-sm font-bold transition">
                        <span class="hidden md:inline">Logout</span>
                        <span class="md:hidden">üö™</span>
                    </button>
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                <div class="max-w-4xl mx-auto">
                    <form onsubmit="createEvent(event)"
                        class="bg-white rounded-3xl shadow-xl p-8 border border-slate-100 space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="col-span-2">
                                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Event
                                    Title</label>
                                <input type="text" id="title"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-bold text-lg"
                                    placeholder="e.g. Annual General Meeting 2026" required>
                            </div>

                            <div>
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Date</label>
                                <input type="date" id="date"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                                    required>
                            </div>

                            <div>
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Time</label>
                                <input type="time" id="time"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                                    required>
                            </div>

                            <div class="col-span-2">
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Location/Venue</label>
                                <input type="text" id="location"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                                    placeholder="e.g. School Hall, Kankara" required>
                            </div>

                            <div class="col-span-2">
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Organizer</label>
                                <input type="text" id="organizer"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                                    placeholder="e.g. Secretariat" value="Secretariat" required>
                            </div>

                            <div class="col-span-2">
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Description</label>
                                <textarea id="description" rows="4"
                                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-600 transition bg-gray-50/50 font-medium"
                                    placeholder="Enter event details..."></textarea>
                            </div>
                        </div>

                        <div class="pt-6 border-t border-slate-100 flex justify-end">
                            <button type="submit"
                                class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-xl font-bold shadow-lg shadow-blue-600/20 transition transform hover:-translate-y-0.5 active:translate-y-0 text-sm">
                                <i class="fas fa-plus mr-2"></i> Publish Event
                            </button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            if (sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
            }
        }

        async function handleLogout() { localStorage.removeItem('access_token'); window.location.href = '/login'; }

        async function fetchMe() {
            const token = localStorage.getItem('access_token');
            if (!token) return;
            try {
                const res = await fetch('/api/v1/auth/me', { headers: { 'Authorization': `Bearer ${token}` } });
                if (res.ok) {
                    const user = await res.json();
                    document.getElementById('sidebarAdminName').textContent = user.full_name;
                    document.getElementById('sidebarAdminRole').textContent = user.role;
                }
            } catch (e) { console.error(e); }
        }

        async function createEvent(e) {
            e.preventDefault();
            const token = localStorage.getItem('access_token');
            if (!token) return window.location.href = '/login';

            const data = {
                title: document.getElementById('title').value,
                date: document.getElementById('date').value,
                time: document.getElementById('time').value,
                location: document.getElementById('location').value,
                organizer: document.getElementById('organizer').value,
                description: document.getElementById('description').value
            };

            const btn = e.target.querySelector('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Publishing...';
            btn.disabled = true;

            try {
                const res = await fetch('/api/v1/events', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await res.json();

                if (res.ok) {
                    alert('Event successfully created!');
                    window.location.href = '/events';
                } else {
                    alert(result.detail || 'Failed to create event');
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch (err) {
                console.error(err);
                alert('An error occurred');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        fetchMe();
    </script>
</body>

