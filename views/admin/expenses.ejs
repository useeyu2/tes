<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Expenses - Alumni System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 glass bg-primary/95 text-white hidden md:flex flex-col border-r border-white/10">
            <div class="p-8">
                <h2 class="text-xl font-black tracking-tight">ADMIN PANEL</h2>
                <div class="h-1 w-12 bg-white/20 mt-2 rounded-full"></div>
            </div>
            <nav class="flex-1 px-4 space-y-2">
                <a href="/admin/dashboard"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üë•</span> Members
                </a>
                <a href="/admin/payments"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üí∞</span> Payments
                </a>
                <a href="/admin/expenses"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl bg-white/10 text-white font-bold transition">
                    <span>üìâ</span> Expenses
                </a>
                <a href="/admin/welfare"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üè•</span> Welfare
                </a>
                <a href="/admin/messages"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üí¨</span> Messages
                </a>
            </nav>
            <div class="p-4">
                <button onclick="handleLogout()"
                    class="w-full flex items-center justify-center gap-3 py-3 rounded-2xl bg-red-500/10 text-red-400 hover:bg-red-500/20 font-bold transition">
                    <span>üö™</span> Logout
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <header
                class="glass bg-white/70 sticky top-0 z-50 p-4 px-8 flex justify-between items-center border-b border-gray-200">
                <div class="flex items-center gap-4">
                    <h2 class="text-xl font-semibold text-gray-800">Expenses Management</h2>
                    <div class="hidden lg:block border-l pl-4 border-gray-200">
                        <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Developer</p>
                        <p class="text-xs font-semibold text-gray-600">Engr Usman Umar</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="relative group">
                        <button
                            class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-bold hover:bg-gray-200 transition flex items-center gap-2">
                            üì• Download Report
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div
                            class="absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-xl border border-gray-100 hidden group-hover:block z-50">
                            <button onclick="downloadPDF('monthly')"
                                class="w-full text-left px-4 py-3 text-sm font-bold text-gray-700 hover:bg-gray-50 rounded-t-xl transition">
                                üìÖ Monthly Report
                            </button>
                            <button onclick="downloadPDF('annual')"
                                class="w-full text-left px-4 py-3 text-sm font-bold text-gray-700 hover:bg-gray-50 rounded-b-xl transition border-t border-gray-50">
                                üìä Annual Report
                            </button>
                        </div>
                    </div>
                    <button onclick="openModal()"
                        class="bg-primary text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-blue-800 shadow-lg shadow-blue-500/20 transition transform active:scale-95">
                        ‚ûï Add Expense
                    </button>
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                <!-- Expenses List -->
                <div class="bg-white rounded-[2rem] shadow-xl overflow-hidden glass border border-white">
                    <div class="px-8 py-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="font-black text-gray-900 tracking-tight">EXPENDITURE LOG</h3>
                        <span class="text-xs text-gray-400 font-bold uppercase tracking-widest" id="totalSpent">Total:
                            ‚Ç¶0</span>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-gray-50/50 text-[10px] uppercase tracking-widest font-black text-gray-400">
                                <tr>
                                    <th class="px-8 py-4">Date</th>
                                    <th class="px-8 py-4">Reason / Description</th>
                                    <th class="px-8 py-4">Category</th>
                                    <th class="px-8 py-4 text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="expenseTable" class="divide-y divide-gray-50">
                                <tr>
                                    <td colspan="4" class="px-8 py-12 text-center text-gray-400 font-bold italic">
                                        Loading expenses...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add Expense Modal -->
    <div id="expenseModal"
        class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-[100] p-4">
        <div class="bg-white rounded-[2.5rem] shadow-2xl w-full max-w-md p-8 transform transition-all">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-black text-gray-900 italic" id="modalTitle">Record Expense</h3>
                <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>

            <form id="expenseForm" class="space-y-4">
                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-1 ml-1">Reason /
                        Description</label>
                    <input type="text" id="reason" required placeholder="e.g. Welfare support for member"
                        class="w-full px-5 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 transition font-bold text-gray-700">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-1 ml-1">Amount
                        (‚Ç¶)</label>
                    <input type="number" id="amount" required placeholder="0.00"
                        class="w-full px-5 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 transition font-bold text-gray-700">
                </div>

                <div>
                    <label
                        class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-1 ml-1">Category</label>
                    <select id="category"
                        class="w-full px-5 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 transition font-bold text-gray-700 appearance-none">
                        <option value="General">General</option>
                        <option value="Welfare">Welfare</option>
                        <option value="Project">Project</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div>
                    <label
                        class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-1 ml-1">Date</label>
                    <input type="date" id="date" required
                        class="w-full px-5 py-4 bg-gray-50 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 transition font-bold text-gray-700">
                </div>

                <button type="submit" id="submitBtn"
                    class="w-full bg-primary text-white py-5 rounded-[2rem] font-black hover:bg-blue-800 transition shadow-xl shadow-blue-500/20 transform active:scale-95 text-lg mt-4">
                    üíæ LOG EXPENDITURE
                </button>
            </form>
        </div>
    </div>

    <script>
        async function handleLogout() { localStorage.removeItem('access_token'); window.location.href = '/login'; }

        function openModal() {
            console.log('Opening modal...');
            document.getElementById('expenseModal').classList.remove('hidden');
            document.getElementById('expenseModal').classList.add('flex');
            // Set default date to today
            document.getElementById('date').valueAsDate = new Date();
        }

        function closeModal() {
            document.getElementById('expenseModal').classList.add('hidden');
            document.getElementById('expenseModal').classList.remove('flex');
            document.getElementById('expenseForm').reset();
            document.getElementById('expenseForm').removeAttribute('data-edit-id');
            document.getElementById('modalTitle').textContent = 'Record Expense';
            document.getElementById('submitBtn').textContent = 'üíæ LOG EXPENDITURE';
        }

        let allExpenses = []; // Global store for search/edit

        function openEditModal(id) {
            const exp = allExpenses.find(e => e._id === id);
            if (!exp) return;

            document.getElementById('reason').value = exp.reason;
            document.getElementById('amount').value = exp.amount;
            document.getElementById('date').value = new Date(exp.date).toISOString().split('T')[0];
            document.getElementById('category').value = exp.category;

            document.getElementById('modalTitle').textContent = 'Edit Expense';
            document.getElementById('submitBtn').textContent = 'üíæ UPDATE EXPENSE';
            document.getElementById('expenseForm').setAttribute('data-edit-id', id);

            document.getElementById('expenseModal').classList.remove('hidden');
            document.getElementById('expenseModal').classList.add('flex');
        }

        async function deleteExpense(id) {
            if (!confirm('Are you sure you want to delete this expense record?')) return;

            const token = localStorage.getItem('access_token');
            try {
                const res = await fetch(`/api/v1/expenses/${id}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (res.ok) {
                    fetchExpenses();
                } else {
                    const err = await res.json();
                    alert(err.detail || 'Failed to delete expense');
                }
            } catch (e) {
                console.error(e);
                alert('Connection error');
            }
        }

        async function fetchExpenses() {
            const token = localStorage.getItem('access_token');
            if (!token) {
                window.location.href = '/login';
                return;
            }
            try {
                const res = await fetch('/api/v1/expenses', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                if (res.ok) {
                    const expenses = await res.json();
                    const tbody = document.getElementById('expenseTable');
                    let total = 0;

                    if (expenses.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="5" class="px-8 py-12 text-center text-gray-400 font-bold">No expenses recorded yet.</td></tr>';
                        document.getElementById('totalSpent').textContent = `Total: ‚Ç¶0`;
                        return;
                    }

                    allExpenses = expenses;
                    tbody.innerHTML = expenses.map(e => {
                        total += e.amount;
                        const date = new Date(e.date).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
                        return `
                            <tr class="hover:bg-gray-50/50 transition">
                                <td class="px-8 py-6 font-bold text-gray-500 text-sm whitespace-nowrap">${date}</td>
                                <td class="px-8 py-6 font-black text-gray-900 tracking-tight">${e.reason}</td>
                                <td class="px-8 py-6">
                                    <span class="px-3 py-1 text-[10px] font-black uppercase tracking-widest rounded-lg bg-gray-100 text-gray-600">${e.category}</span>
                                </td>
                                <td class="px-8 py-6 font-black text-primary text-lg">‚Ç¶${e.amount.toLocaleString()}</td>
                                <td class="px-8 py-6 text-right space-x-2">
                                    <button onclick="openEditModal('${e._id}')" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition" title="Edit">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                    </button>
                                    <button onclick="deleteExpense('${e._id}')" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition" title="Delete">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </button>
                                </td>
                            </tr>
                        `;
                    }).join('');

                    document.getElementById('totalSpent').textContent = `Total Spent: ‚Ç¶${total.toLocaleString()}`;
                } else {
                    const err = await res.json();
                    console.error('Fetch Expenses Error:', err);
                    if (res.status === 401 || res.status === 403) {
                        alert('Auth error: ' + (err.detail || 'Access Denied'));
                        handleLogout();
                    }
                }
            } catch (e) {
                console.error('Network Error:', e);
            }
        }

        document.getElementById('expenseForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const token = localStorage.getItem('access_token');
            const data = {
                reason: document.getElementById('reason').value,
                amount: document.getElementById('amount').value,
                date: document.getElementById('date').value,
                category: document.getElementById('category').value
            };

            const editId = document.getElementById('expenseForm').getAttribute('data-edit-id');
            const method = editId ? 'PUT' : 'POST';
            const url = editId ? `/api/v1/expenses/${editId}` : '/api/v1/expenses';

            try {
                const res = await fetch(url, {
                    method: method,
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                if (res.ok) {
                    closeModal();
                    fetchExpenses();
                } else {
                    const err = await res.json();
                    alert(err.detail || 'Failed to save expense');
                }
            } catch (e) {
                console.error(e);
                alert('Connection error');
            }
        });

        async function downloadPDF(type) {
            const token = localStorage.getItem('access_token');
            const now = new Date();
            const month = now.getMonth();
            const year = now.getFullYear();

            let url = `/api/v1/expenses/export?type=${type}&year=${year}`;
            if (type === 'monthly') url += `&month=${month}`;

            try {
                const response = await fetch(url, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    const filename = type === 'monthly' ? `Expenses_${new Date().toLocaleString('default', { month: 'long' })}_${year}.pdf` : `Expenses_Annual_${year}.pdf`;
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                } else {
                    alert('Failed to generate report');
                }
            } catch (e) {
                console.error(e);
                alert('An error occurred during download');
            }
        }

        fetchExpenses();
    </script>
</body>

</html>