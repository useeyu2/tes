<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Setup - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <div class="flex h-screen overflow-hidden relative">
        <%- include('../partials/sidebar') %>

            <!-- Main Content -->
            <div class="flex-1 flex flex-col overflow-hidden">
                <% const actions=` <button onclick="openPositionModal()"
                    class="bg-primary hover:bg-blue-800 text-white px-8 py-3 rounded-2xl font-black shadow-xl shadow-blue-500/20 transition transform active:scale-95 text-xs uppercase tracking-widest">
                    <i class="fas fa-plus mr-2"></i> New Position
                    </button>
                    `;
                    %>
                    <%- include('../partials/header', { title: 'Election Setup' , actions: actions }) %>

                        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                                <!-- Positions List -->
                                <div class="lg:col-span-1 space-y-4" id="positionsList">
                                    <div class="animate-pulse bg-white h-20 rounded-2xl"></div>
                                    <div class="animate-pulse bg-white h-20 rounded-2xl"></div>
                                </div>

                                <!-- Candidates Area -->
                                <div class="lg:col-span-2">
                                    <div
                                        class="bg-white rounded-[2.5rem] shadow-xl p-10 border border-slate-50 min-h-[500px] glass">
                                        <div class="flex justify-between items-center mb-8">
                                            <h2 class="text-2xl font-black text-gray-900 tracking-tight"
                                                id="selectedPosTitle">
                                                Select a Position
                                            </h2>
                                            <button id="addCandidateBtn" onclick="openCandidateModal()" disabled
                                                class="bg-gray-100 text-gray-400 px-6 py-3 rounded-2xl font-black text-xs transition cursor-not-allowed uppercase tracking-widest">
                                                <i class="fas fa-user-plus mr-2"></i> Add Candidate
                                            </button>
                                        </div>

                                        <div id="candidatesGrid" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <div class="col-span-full text-center py-24 text-gray-400 font-bold italic">
                                                Select a position from the left to manage candidates.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
            </div>
    </div>

    <!-- Modals -->
    <!-- Position Modal -->
    <div id="positionModal"
        class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-[100] p-4">
        <form onsubmit="createPosition(event)" class="bg-white rounded-[2.5rem] shadow-2xl w-full max-w-md p-10">
            <h3 class="text-2xl font-black text-gray-900 mb-8">Create Position</h3>
            <div class="space-y-6">
                <div>
                    <label
                        class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Title</label>
                    <input type="text" name="title" placeholder="e.g. President" required
                        class="w-full px-6 py-4 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 bg-gray-50/50 font-bold text-gray-700">
                </div>
                <div>
                    <label
                        class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Description</label>
                    <textarea name="description" placeholder="Short description..."
                        class="w-full px-6 py-4 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 bg-gray-50/50 font-bold text-gray-700"
                        rows="3"></textarea>
                </div>
            </div>
            <div class="flex gap-4 mt-10">
                <button type="button" onclick="closeModal('positionModal')"
                    class="flex-1 py-4 bg-gray-50 rounded-2xl font-black text-gray-400 uppercase tracking-widest text-xs hover:bg-gray-100">Cancel</button>
                <button type="submit"
                    class="flex-1 py-4 bg-primary rounded-2xl font-black text-white shadow-xl shadow-blue-500/20 hover:bg-blue-800 transition uppercase tracking-widest text-xs">Create</button>
            </div>
        </form>
    </div>

    <!-- Candidate Modal -->
    <div id="candidateModal"
        class="fixed inset-0 bg-black/60 backdrop-blur-sm hidden items-center justify-center z-[100] p-4">
        <form onsubmit="createCandidate(event)" class="bg-white rounded-[2.5rem] shadow-2xl w-full max-w-md p-10">
            <h3 class="text-2xl font-black text-gray-900 mb-8">Add Candidate</h3>
            <div class="space-y-6">
                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Full
                        Name</label>
                    <input type="text" name="full_name" placeholder="Full Name" required
                        class="w-full px-6 py-4 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 bg-gray-50/50 font-bold text-gray-700">
                </div>
                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Manifesto
                        / Bio</label>
                    <textarea name="manifesto" placeholder="Short manifesto..."
                        class="w-full px-6 py-4 border border-gray-100 rounded-2xl focus:outline-none focus:ring-4 focus:ring-primary/10 bg-gray-50/50 font-bold text-gray-700"
                        rows="3"></textarea>
                </div>
                <div>
                    <label
                        class="block text-xs font-black text-gray-400 uppercase tracking-widest mb-2 ml-1">Photo</label>
                    <input type="file" name="photo" accept="image/*"
                        class="w-full text-sm text-gray-500 file:mr-4 file:py-3 file:px-6 file:rounded-full file:border-0 file:text-xs file:font-black file:bg-blue-50 file:text-primary hover:file:bg-blue-100" />
                </div>
            </div>
            <div class="flex gap-4 mt-10">
                <button type="button" onclick="closeModal('candidateModal')"
                    class="flex-1 py-4 bg-gray-50 rounded-2xl font-black text-gray-400 uppercase tracking-widest text-xs hover:bg-gray-100">Cancel</button>
                <button type="submit"
                    class="flex-1 py-4 bg-primary rounded-2xl font-black text-white shadow-xl shadow-blue-500/20 hover:bg-blue-800 transition uppercase tracking-widest text-xs">Add
                    Candidate</button>
            </div>
        </form>
    </div>

    <script>
        let allData = { positions: [], candidates: [] };
        let selectedPositionId = null;
        const token = localStorage.getItem('access_token');
        if (!token) window.location.href = '/login';

        async function loadData() {
            try {
                const res = await fetch('/api/v1/voting/data', { headers: { 'Authorization': `Bearer ${token}` } });
                const result = await res.json();
                if (result.success) {
                    allData = result.data;
                    renderPositions();
                    if (selectedPositionId) renderCandidates(selectedPositionId);
                }
            } catch (e) { console.error(e); }
        }

        function renderPositions() {
            const list = document.getElementById('positionsList');
            list.innerHTML = allData.positions.map(p => `
            <div onclick="selectPosition('${p._id}', '${p.title}')" 
                class="p-6 rounded-[2rem] cursor-pointer transition border-2 ${selectedPositionId === p._id ? 'bg-white border-primary shadow-2xl scale-[1.02]' : 'bg-white/50 border-transparent hover:bg-white hover:border-blue-100'}">
                <h3 class="font-black text-gray-900 tracking-tight">${p.title}</h3>
                <p class="text-xs text-gray-400 font-bold uppercase tracking-widest truncate mt-1">${p.description || 'No description'}</p>
            </div>
        `).join('');
        }

        function renderCandidates(posId) {
            const grid = document.getElementById('candidatesGrid');
            const candidates = allData.candidates.filter(c => c.position._id === posId || c.position === posId);

            if (candidates.length === 0) {
                grid.innerHTML = '<div class="col-span-full text-center py-20 text-gray-400 font-bold italic">No candidates added yet for this position.</div>';
                return;
            }

            grid.innerHTML = candidates.map(c => `
            <div class="flex items-center gap-5 p-5 bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-md transition">
                <div class="w-16 h-16 rounded-2xl bg-gray-50 overflow-hidden flex-shrink-0 border border-gray-100">
                     ${c.photoUrl ? `<img src="${c.photoUrl}" class="w-full h-full object-cover">` : `<div class="w-full h-full flex items-center justify-center text-gray-300"><i class="fas fa-user text-2xl"></i></div>`}
                </div>
                <div>
                    <h4 class="font-black text-gray-900 tracking-tight">${c.full_name}</h4>
                    <p class="text-xs text-gray-400 font-bold uppercase tracking-widest line-clamp-1 mt-0.5">${c.manifesto || 'No bio'}</p>
                </div>
            </div>
        `).join('');
        }

        function selectPosition(id, title) {
            selectedPositionId = id;
            document.getElementById('selectedPosTitle').textContent = title;
            renderPositions();
            renderCandidates(id);

            const btn = document.getElementById('addCandidateBtn');
            btn.disabled = false;
            btn.classList.remove('bg-gray-100', 'text-gray-400', 'cursor-not-allowed');
            btn.classList.add('bg-primary', 'text-white', 'hover:bg-blue-800', 'shadow-xl', 'shadow-blue-500/20');
        }

        function openPositionModal() {
            document.getElementById('positionModal').classList.remove('hidden');
            document.getElementById('positionModal').classList.add('flex');
        }

        async function createPosition(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/v1/voting/positions', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}`, 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                if (res.ok) {
                    closeModal('positionModal');
                    e.target.reset();
                    loadData();
                }
            } catch (e) { console.error(e); }
        }

        function openCandidateModal() {
            document.getElementById('candidateModal').classList.remove('hidden');
            document.getElementById('candidateModal').classList.add('flex');
        }

        async function createCandidate(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            formData.append('position', selectedPositionId);

            try {
                const res = await fetch('/api/v1/voting/candidates', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });
                if (res.ok) {
                    closeModal('candidateModal');
                    e.target.reset();
                    loadData();
                }
            } catch (e) { console.error(e); }
        }

        function closeModal(id) {
            document.getElementById(id).classList.add('hidden');
            document.getElementById(id).classList.remove('flex');
        }

        loadData();
    </script>
</body>

</html>