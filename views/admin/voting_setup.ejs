<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Setup - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
    <style>
        .glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .bg-pattern {
            background-image: radial-gradient(#1e3a8a 0.5px, transparent 0.5px);
            background-size: 20px 20px;
        }
    </style>
</head>

<body class="bg-gray-50 text-gray-900 bg-pattern min-h-screen">
    <div class="flex h-screen overflow-hidden relative">
        <!-- Sidebar Overlay (Mobile) -->
        <div id="sidebarOverlay" onclick="toggleSidebar()"
            class="fixed inset-0 bg-black/50 z-[55] hidden md:hidden transition-opacity"></div>

        <!-- Sidebar -->
        <aside id="adminSidebar"
            class="fixed md:static inset-y-0 left-0 w-64 glass bg-primary/95 text-white flex flex-col border-r border-white/10 z-[60] transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out">
            <div class="p-8">
                <h2 class="text-xl font-black tracking-tight">ADMIN PANEL</h2>
                <div class="h-1 w-12 bg-white/20 mt-2 rounded-full mb-4"></div>

                <!-- Admin Details in Sidebar -->
                <div class="bg-white/10 rounded-xl p-3 border border-white/10 mb-2">
                    <p class="text-[10px] uppercase tracking-widest text-white/60 font-bold" id="sidebarAdminRole">
                        Loading...</p>
                    <p class="text-sm font-bold text-white" id="sidebarAdminName">Loading...</p>
                </div>
            </div>
            <nav class="flex-1 px-4 space-y-2">
                <a href="/admin/dashboard"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üë•</span> Members
                </a>
                <a href="/admin/payments"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üí∞</span> Payments
                </a>
                <a href="/admin/expenses"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üìâ</span> Expenses
                </a>
                <a href="/admin/welfare"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üè•</span> Welfare
                </a>
                <a href="/admin/messages"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üí¨</span> Messages
                </a>
                <a href="/contributions"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üí≥</span> My Contribution
                </a>
                <a href="/admin/events/create"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üìÖ</span> Create Event
                </a>
                <a href="/admin/gallery/upload"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl hover:bg-white/5 text-white/70 font-bold transition">
                    <span>üñºÔ∏è</span> Upload Memory
                </a>
                <a href="/admin/voting/setup"
                    class="flex items-center gap-3 py-3 px-6 rounded-2xl bg-white/10 text-white font-bold transition">
                    <span>üó≥Ô∏è</span> Setup Elections
                </a>
            </nav>
            <div class="p-4">
                <button onclick="handleLogout()"
                    class="w-full flex items-center justify-center gap-3 py-3 rounded-2xl bg-red-500/10 text-red-400 hover:bg-red-500/20 font-bold transition">
                    <span>üö™</span> Logout
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <header
                class="glass bg-white/70 sticky top-0 z-50 p-4 px-4 md:px-8 flex justify-between items-center border-b border-gray-200">
                <div class="flex items-center gap-3 md:gap-4">
                    <!-- Mobile Hamburger -->
                    <button onclick="toggleSidebar()" class="md:hidden p-2 hover:bg-gray-100 rounded-lg">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>

                    <h2 class="text-lg md:text-xl font-black text-gray-800 uppercase tracking-tight">Setup Elections
                    </h2>
                </div>

                <div class="flex items-center gap-4">
                    <div class="hidden lg:block border-l pl-4 border-gray-200 mr-4">
                        <p class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">ALUMNI SYSTEM</p>
                        <p class="text-[10px] font-semibold text-gray-600">Standardized Admin View</p>
                    </div>
                    <button onclick="openPositionModal()"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-bold shadow-lg shadow-blue-600/20 transition text-sm">
                        <i class="fas fa-plus mr-2"></i> New Position
                    </button>
                    <button onclick="handleLogout()"
                        class="bg-red-500 hover:bg-red-600 text-white p-2 md:px-4 md:py-2 rounded-lg text-sm font-bold transition">
                        <span class="hidden md:inline">Logout</span>
                        <span class="md:hidden">üö™</span>
                    </button>
                </div>
            </header>

            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Positions List -->
                    <div class="lg:col-span-1 space-y-4" id="positionsList">
                        <div class="animate-pulse bg-white h-20 rounded-xl"></div>
                        <div class="animate-pulse bg-white h-20 rounded-xl"></div>
                    </div>

                    <!-- Candidates Area -->
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-3xl shadow-xl p-8 border border-slate-100 min-h-[500px]">
                            <div class="flex justify-between items-center mb-6">
                                <h2 class="text-xl font-black text-slate-800" id="selectedPosTitle">Select a Position
                                </h2>
                                <button id="addCandidateBtn" onclick="openCandidateModal()" disabled
                                    class="bg-gray-100 text-gray-400 px-4 py-2 rounded-lg font-bold text-xs transition cursor-not-allowed">
                                    <i class="fas fa-user-plus mr-1"></i> Add Candidate
                                </button>
                            </div>

                            <div id="candidatesGrid" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="col-span-full text-center py-20 text-gray-400">
                                    Select a position from the left to manage candidates.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modals -->
    <!-- Position Modal -->
    <div id="positionModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <form onsubmit="createPosition(event)" class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Create Position</h3>
            <div class="space-y-4">
                <input type="text" name="title" placeholder="Position Title (e.g. President)" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                <textarea name="description" placeholder="Description"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600"></textarea>
            </div>
            <div class="flex gap-3 mt-8">
                <button type="button" onclick="closeModal('positionModal')"
                    class="flex-1 py-3 bg-gray-100 rounded-lg font-bold text-gray-600">Cancel</button>
                <button type="submit" class="flex-1 py-3 bg-blue-600 rounded-lg font-bold text-white">Create</button>
            </div>
        </form>
    </div>

    <!-- Candidate Modal -->
    <div id="candidateModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <form onsubmit="createCandidate(event)" class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Add Candidate</h3>
            <div class="space-y-4">
                <input type="text" name="full_name" placeholder="Full Name" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                <textarea name="manifesto" placeholder="Manifesto / Short Bio"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600"></textarea>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Photo</label>
                    <input type="file" name="photo" accept="image/*"
                        class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                </div>
            </div>
            <div class="flex gap-3 mt-8">
                <button type="button" onclick="closeModal('candidateModal')"
                    class="flex-1 py-3 bg-gray-100 rounded-lg font-bold text-gray-600">Cancel</button>
                <button type="submit" class="flex-1 py-3 bg-blue-600 rounded-lg font-bold text-white">Add
                    Candidate</button>
            </div>
        </form>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            if (sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('hidden');
            }
        }

        async function handleLogout() { localStorage.removeItem('access_token'); window.location.href = '/login'; }

        let allData = { positions: [], candidates: [] };
        let selectedPositionId = null;
        const token = localStorage.getItem('access_token');
        if (!token) window.location.href = '/login';

        async function loadData() {
            try {
                // Fetch me for sidebar
                const meRes = await fetch('/api/v1/auth/me', { headers: { 'Authorization': `Bearer ${token}` } });
                if (meRes.ok) {
                    const user = await meRes.json();
                    document.getElementById('sidebarAdminName').textContent = user.full_name;
                    document.getElementById('sidebarAdminRole').textContent = user.role;
                }

                const res = await fetch('/api/v1/voting/data', { headers: { 'Authorization': `Bearer ${token}` } });
                allData = await res.json();
                renderPositions();
                if (selectedPositionId) renderCandidates(selectedPositionId);
            } catch (e) { console.error(e); }
        }

        function renderPositions() {
            const list = document.getElementById('positionsList');
            list.innerHTML = allData.positions.map(p => `
                <div onclick="selectPosition('${p._id}', '${p.title}')" 
                    class="p-4 rounded-xl cursor-pointer transition border border-transparent hover:border-blue-200 hover:bg-white hover:shadow-md ${selectedPositionId === p._id ? 'bg-white border-blue-500 shadow-lg ring-2 ring-blue-500/20' : 'bg-white/50'}">
                    <h3 class="font-bold text-gray-800">${p.title}</h3>
                    <p class="text-xs text-gray-500 truncate">${p.description || 'No description'}</p>
                </div>
            `).join('');
        }

        function renderCandidates(posId) {
            const grid = document.getElementById('candidatesGrid');
            const candidates = allData.candidates.filter(c => c.position._id === posId || c.position === posId);

            if (candidates.length === 0) {
                grid.innerHTML = '<div class="col-span-full text-center py-20 text-gray-400">No candidates added yet.</div>';
                return;
            }

            grid.innerHTML = candidates.map(c => `
                <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl border border-gray-200">
                    <div class="w-12 h-12 rounded-full bg-gray-200 overflow-hidden flex-shrink-0">
                         ${c.photoUrl ? `<img src="${c.photoUrl}" class="w-full h-full object-cover">` : `<i class="fas fa-user text-gray-400 text-lg m-auto h-full flex items-center justify-center"></i>`}
                    </div>
                    <div>
                        <h4 class="font-bold text-gray-800">${c.full_name}</h4>
                        <p class="text-xs text-gray-500 line-clamp-1">${c.manifesto || 'No bio'}</p>
                    </div>
                </div>
            `).join('');
        }

        function selectPosition(id, title) {
            selectedPositionId = id;
            document.getElementById('selectedPosTitle').textContent = title;
            renderPositions();
            renderCandidates(id);

            const btn = document.getElementById('addCandidateBtn');
            btn.disabled = false;
            btn.classList.remove('bg-gray-100', 'text-gray-400', 'cursor-not-allowed');
            btn.classList.add('bg-green-600', 'text-white', 'hover:bg-green-700', 'shadow-lg');
        }

        function openPositionModal() {
            document.getElementById('positionModal').classList.remove('hidden');
            document.getElementById('positionModal').classList.add('flex');
        }

        async function createPosition(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/v1/voting/positions', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                if (res.ok) {
                    closeModal('positionModal');
                    e.target.reset();
                    loadData();
                } else alert('Failed to create position');
            } catch (e) { console.error(e); }
        }

        function openCandidateModal() {
            document.getElementById('candidateModal').classList.remove('hidden');
            document.getElementById('candidateModal').classList.add('flex');
        }

        async function createCandidate(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            formData.append('position', selectedPositionId);

            try {
                const res = await fetch('/api/v1/voting/candidates', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });
                if (res.ok) {
                    closeModal('candidateModal');
                    e.target.reset();
                    loadData();
                } else alert('Failed to add candidate');
            } catch (e) { console.error(e); }
        }

        function closeModal(id) {
            document.getElementById(id).classList.add('hidden');
            document.getElementById(id).classList.remove('flex');
        }

        loadData();
    </script>
</body>

</html>