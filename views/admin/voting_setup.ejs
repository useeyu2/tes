<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Setup - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script>
        tailwind.config = { theme: { extend: { colors: { primary: '#1e3a8a', secondary: '#1e40af' } } } }
    </script>
</head>

<body class="bg-gray-50 text-gray-900 font-sans min-h-screen">

    <div class="max-w-6xl mx-auto p-4 md:p-8">
        <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
            <div>
                <a href="/admin/dashboard"
                    class="text-sm font-bold text-slate-400 hover:text-blue-600 transition mb-2 inline-block"><i
                        class="fas fa-arrow-left mr-1"></i> Back to Dashboard</a>
                <h1 class="text-2xl md:text-3xl font-black text-slate-800">Election Setup</h1>
                <p class="text-slate-500 font-medium text-sm">Manage positions and candidates.</p>
            </div>
            <button onclick="openPositionModal()"
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl font-bold shadow-lg shadow-blue-600/20 transition text-sm w-full md:w-auto">
                <i class="fas fa-plus mr-2"></i> New Position
            </button>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Positions List -->
            <div class="lg:col-span-1 space-y-4" id="positionsList">
                <div class="animate-pulse bg-white h-20 rounded-xl"></div>
                <div class="animate-pulse bg-white h-20 rounded-xl"></div>
            </div>

            <!-- Candidates Area -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-3xl shadow-xl p-8 border border-slate-100 min-h-[500px]">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-xl font-black text-slate-800" id="selectedPosTitle">Select a Position</h2>
                        <button id="addCandidateBtn" onclick="openCandidateModal()" disabled
                            class="bg-gray-100 text-gray-400 px-4 py-2 rounded-lg font-bold text-xs transition cursor-not-allowed">
                            <i class="fas fa-user-plus mr-1"></i> Add Candidate
                        </button>
                    </div>

                    <div id="candidatesGrid" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="col-span-full text-center py-20 text-gray-400">
                            Select a position from the left to manage candidates.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <!-- Position Modal -->
    <div id="positionModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <form onsubmit="createPosition(event)" class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Create Position</h3>
            <div class="space-y-4">
                <input type="text" name="title" placeholder="Position Title (e.g. President)" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                <textarea name="description" placeholder="Description"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600"></textarea>
            </div>
            <div class="flex gap-3 mt-8">
                <button type="button" onclick="closeModal('positionModal')"
                    class="flex-1 py-3 bg-gray-100 rounded-lg font-bold text-gray-600">Cancel</button>
                <button type="submit" class="flex-1 py-3 bg-blue-600 rounded-lg font-bold text-white">Create</button>
            </div>
        </form>
    </div>

    <!-- Candidate Modal -->
    <div id="candidateModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden items-center justify-center z-50">
        <form onsubmit="createCandidate(event)" class="bg-white rounded-2xl shadow-2xl w-full max-w-md p-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Add Candidate</h3>
            <div class="space-y-4">
                <input type="text" name="full_name" placeholder="Full Name" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                <textarea name="manifesto" placeholder="Manifesto / Short Bio"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600"></textarea>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Photo</label>
                    <input type="file" name="photo" accept="image/*"
                        class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                </div>
            </div>
            <div class="flex gap-3 mt-8">
                <button type="button" onclick="closeModal('candidateModal')"
                    class="flex-1 py-3 bg-gray-100 rounded-lg font-bold text-gray-600">Cancel</button>
                <button type="submit" class="flex-1 py-3 bg-blue-600 rounded-lg font-bold text-white">Add
                    Candidate</button>
            </div>
        </form>
    </div>

    <script>
        let allData = { positions: [], candidates: [] };
        let selectedPositionId = null;
        const token = localStorage.getItem('access_token');
        if (!token) window.location.href = '/login';

        async function loadData() {
            try {
                const res = await fetch('/api/v1/voting/data', { headers: { 'Authorization': `Bearer ${token}` } });
                allData = await res.json();
                renderPositions();
                if (selectedPositionId) renderCandidates(selectedPositionId); // Refresh candidates if selected
            } catch (e) { console.error(e); }
        }

        function renderPositions() {
            const list = document.getElementById('positionsList');
            list.innerHTML = allData.positions.map(p => `
                <div onclick="selectPosition('${p._id}', '${p.title}')" 
                    class="p-4 rounded-xl cursor-pointer transition border border-transparent hover:border-blue-200 hover:bg-white hover:shadow-md ${selectedPositionId === p._id ? 'bg-white border-blue-500 shadow-lg ring-2 ring-blue-500/20' : 'bg-white/50'}">
                    <h3 class="font-bold text-gray-800">${p.title}</h3>
                    <p class="text-xs text-gray-500 truncate">${p.description || 'No description'}</p>
                </div>
            `).join('');
        }

        function renderCandidates(posId) {
            const grid = document.getElementById('candidatesGrid');
            const candidates = allData.candidates.filter(c => c.position._id === posId || c.position === posId);

            if (candidates.length === 0) {
                grid.innerHTML = '<div class="col-span-full text-center py-20 text-gray-400">No candidates added yet.</div>';
                return;
            }

            grid.innerHTML = candidates.map(c => `
                <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-xl border border-gray-200">
                    <div class="w-12 h-12 rounded-full bg-gray-200 overflow-hidden flex-shrink-0">
                         ${c.photoUrl ? `<img src="${c.photoUrl}" class="w-full h-full object-cover">` : `<i class="fas fa-user text-gray-400 text-lg m-auto h-full flex items-center justify-center"></i>`}
                    </div>
                    <div>
                        <h4 class="font-bold text-gray-800">${c.full_name}</h4>
                        <p class="text-xs text-gray-500 line-clamp-1">${c.manifesto || 'No bio'}</p>
                    </div>
                </div>
            `).join('');
        }

        function selectPosition(id, title) {
            selectedPositionId = id;
            document.getElementById('selectedPosTitle').textContent = title;
            renderPositions(); // Update active state
            renderCandidates(id);

            const btn = document.getElementById('addCandidateBtn');
            btn.disabled = false;
            btn.classList.remove('bg-gray-100', 'text-gray-400', 'cursor-not-allowed');
            btn.classList.add('bg-green-600', 'text-white', 'hover:bg-green-700', 'shadow-lg');
        }

        // --- Create Position ---
        function openPositionModal() {
            document.getElementById('positionModal').classList.remove('hidden');
            document.getElementById('positionModal').classList.add('flex');
        }

        async function createPosition(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const res = await fetch('/api/v1/voting/positions', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                if (res.ok) {
                    closeModal('positionModal');
                    e.target.reset();
                    loadData();
                } else alert('Failed to create position');
            } catch (e) { console.error(e); }
        }

        // --- Create Candidate ---
        function openCandidateModal() {
            document.getElementById('candidateModal').classList.remove('hidden');
            document.getElementById('candidateModal').classList.add('flex');
        }

        async function createCandidate(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            formData.append('position', selectedPositionId);

            try {
                const res = await fetch('/api/v1/voting/candidates', {
                    method: 'POST',
                    headers: { 'Authorization': `Bearer ${token}` },
                    body: formData
                });
                if (res.ok) {
                    closeModal('candidateModal');
                    e.target.reset();
                    loadData();
                } else alert('Failed to add candidate');
            } catch (e) { console.error(e); }
        }

        function closeModal(id) {
            document.getElementById(id).classList.add('hidden');
            document.getElementById(id).classList.remove('flex');
        }

        loadData();
    </script>
</body>

</html>